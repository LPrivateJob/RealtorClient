<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">#f5cc3f</item>
    </style>

    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="ContractListItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/x20</item>
    </style>

    <style name="ContractListItemContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/x26</item>
    </style>

    <style name="CommitContractItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/y50</item>
        <item name="android:textSize">@dimen/x26</item>
    </style>

    <style name="CommitContractItemContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">#e6e6e6</item>
        <item name="android:textSize">@dimen/x22</item>
    </style>

    <style name="BottomButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y98</item>
        <item name="android:textSize">@dimen/x36</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="BottomButtonRed" parent="BottomButton">
        <item name="android:background">#cd3500</item>
    </style>

    <style name="BottomButtonYellow" parent="BottomButton">
        <item name="android:background">#f5cc3f</item>
    </style>

    <style name="SlidingMenuItem">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/x26</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@drawable/color_slidingmenu_txt</item>
        <item name="android:background">@drawable/bg_slidingmenu_item</item>
    </style>

    <style name="UpLoadPicTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y50</item>
        <item name="android:layout_marginTop">@dimen/y20</item>
        <item name="android:layout_marginBottom">@dimen/y20</item>
        <item name="android:paddingLeft">@dimen/x20</item>
        <item name="android:layout_marginLeft">@dimen/x20</item>
        <item name="android:layout_marginRight">@dimen/x20</item>
        <item name="android:background">#e6e6e6</item>
    </style>

    <style name="UpLoadPicImageView">
        <item name="android:layout_width">@dimen/x180</item>
        <item name="android:layout_height">@dimen/y180</item>
    </style>

    <style name="UpLoadPicTitleTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/x28</item>
    </style>

    <style name="UpLoadPicTitleExtraTv">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/x20</item>
        <item name="android:layout_marginLeft">@dimen/x15</item>
    </style>

    <style name="ContractInfoBlockTitle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/y60</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginLeft">@dimen/x20</item>
        <item name="android:layout_marginRight">@dimen/x20</item>
        <item name="android:background">#e6e6e6</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/x20</item>
        <item name="android:textColor">#999999</item>
        <item name="android:textSize">@dimen/x28</item>
    </style>

    <style name="ContractInfoItemTitle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/x74</item>
        <item name="android:layout_marginTop">@dimen/y50</item>
        <item name="android:textColor">#666666</item>
        <item name="android:textSize">@dimen/x22</item>
    </style>

    <style name="ContractInfoItemContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">#333333</item>
        <item name="android:textSize">@dimen/x22</item>
    </style>
    <style name="ChangePasswordEditTextWrapper">
        <item name="android:layout_width">@dimen/x590</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="hintEnabled">true</item>
        <item name="android:layout_marginTop">@dimen/y50</item>
    </style>
    <style name="ChangePasswordEditText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@null</item>
    </style>
</resources>
