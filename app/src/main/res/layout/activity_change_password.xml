<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.realtor.jx.widget.Header
        android:id="@+id/mHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        app:title="修改密码" />

    <RelativeLayout
        android:id="@+id/mRlPhoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/mHeader"
        android:layout_marginLeft="@dimen/x90"
        android:layout_marginTop="@dimen/y60">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/mEtPhoneTextWrapper"
            style="@style/ChangePasswordEditTextWrapper"
            android:layout_marginTop="0dp">

            <android.support.design.widget.TextInputEditText
                android:id="@+id/mEtPhone"
                style="@style/ChangePasswordEditText"
                android:hint="手机号"
                android:inputType="phone" />
        </android.support.design.widget.TextInputLayout>


        <com.realtor.jx.widget.CountDownView
            android:id="@+id/mTvGetVerifyCode"
            android:layout_width="@dimen/x180"
            android:layout_height="@dimen/y51"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/x90"
            android:background="@drawable/bg_countdown_view_normal"
            android:text="获取验证码"
            android:textColor="#666666"
            android:textSize="@dimen/x22" />
    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/mEtWrapperVerifyCode"
        style="@style/ChangePasswordEditTextWrapper"
        android:layout_alignLeft="@id/mRlPhoneNum"
        android:layout_below="@+id/mRlPhoneNum">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/mEtVerifyCode"
            style="@style/ChangePasswordEditText"
            android:hint="短信验证码" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/mEtWrapperNewPassword"
        style="@style/ChangePasswordEditTextWrapper"
        android:layout_alignLeft="@id/mRlPhoneNum"
        android:layout_below="@+id/mEtWrapperVerifyCode">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/mEtNewPassword"
            style="@style/ChangePasswordEditText"
            android:hint="输入新的6-16位密码" />
    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/mBtnConfirm"
        android:layout_width="@dimen/x590"
        android:layout_height="@dimen/y90"
        android:layout_below="@id/mEtWrapperNewPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/y179"
        android:background="@drawable/bg_tv_changepassword"
        android:gravity="center"
        android:text="确定"
        android:textColor="#ffffff" />
</RelativeLayout>